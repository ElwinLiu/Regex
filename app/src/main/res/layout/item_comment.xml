<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_comment_card_avatar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="#FFFFFFFF"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_comment_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_square" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="nickname"
        app:layout_constraintStart_toEndOf="@+id/item_comment_card_avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/item_comment_card_avatar"
        app:layout_constraintTop_toBottomOf="@+id/item_comment_date" />

    <TableRow
        android:id="@+id/item_comment_tabelRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_comment_card_avatar"
        app:layout_constraintTop_toBottomOf="@+id/item_comment_content" />

    <TextView
        android:id="@+id/item_comment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="2002.01.06"
        app:layout_constraintStart_toEndOf="@+id/item_comment_card_avatar"
        app:layout_constraintTop_toBottomOf="@+id/item_comment_name" />


    <androidx.cardview.widget.CardView
        android:id="@+id/item_comment_card_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="#FFFFFFFF"
        app:cardCornerRadius="24dp"
        app:cardElevation="2dp"
        app:layout_constraintStart_toEndOf="@+id/item_comment_card_avatar"
        app:layout_constraintTop_toBottomOf="@+id/item_comment_content">

        <ImageView
            android:id="@+id/item_comment_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_personal" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>