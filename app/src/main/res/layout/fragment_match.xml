<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg01"
    android:orientation="vertical">




    <!--放一个星球-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="200dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fp_planet">
        </ImageView>
    </LinearLayout>



    <!--线性布局 两个按钮-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        android:gravity="bottom">
        <Button
            android:background="@drawable/bt_style_01"
            android:drawableRight="@drawable/bt_ic_bingchuan"
            android:id="@+id/bt_soul"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="10dp"
            android:text="灵魂匹配"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_marginBottom="70dp"/>



        <Button
            android:background="@drawable/bt_style_03"
            android:drawableRight="@drawable/bt_ic_shatan"
            android:id="@+id/bt_voiceCall"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginBottom="70dp"
            android:text="语音匹配"
            android:textColor="#ffffff"
            android:textSize="18sp" />


    </LinearLayout>

</RelativeLayout>